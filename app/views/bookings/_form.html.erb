<div>
  <h1> Show </h1>
  <%= form_with model: @booking  do |form| %>

    <div class="container">
      <div class="row g-2 mb-1">
        <div class="col-md">
          <div class="form-floating mb-1">
            <%= form.date_field :start_time, class: "form-control"%>
            <%= form.label :Fecha_Salida %>
          </div>
        </div>
        <div class="col-md">
          <div class="form-floating mb-1">
            <%= form.date_field :finish_time, class: "form-control"%>
            <%= form.label :Fecha_Llegada %>
          </div>
        </div>
      </div>

      <div class="row g-2 mb-1">
        <div class="row g-2 mb-1">
          <div class="col-md">
            <div class="form-floating mb-1">
              <%= form.text_field :aircraft, class: "form-control"%>
              <%#= form.text_field(:aircraft.name, Aircraft.all, class: "form-control")%>
              <%= form.label :Aircraft %>
            </div>
          </div>
        </div>
      </div>


      <div class="row g-2 mb-1">
        <div class="row g-2 mb-1">
          <div class="col-md">
            <div class="form-floating mb-1">
              <%= form.text_field :aircraft, class: "form-control" %>
              <%= form.label :Descriptions %>
            </div>
          </div>
        </div>
      </div>

    </div>
  <% end %>
</div>