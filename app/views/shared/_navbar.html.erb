<header class="d-flex align-items-center justify-content-between px-4 px-md-5 bg-white overflow-auto" style="height: 122px; border-bottom: 1px solid rgba(229,231,235, 1);">

  <%= link_to sanitize('Fly<strong>Oner</strong>'), root_path, class: "h4 link-dark text-decoration-none py-1 ms-9 my-0 text-center", id:"navbar-brand-mm"%>


  <%= link_to 'Aircrafts', aircrafts_path, class: 'h5 link-dark text-decoration-none py-5 ms-5 me-4 my-0 text-center', id:'links-nav-mm' %>

  <div class="d-flex ms-auto">

    <%= link_to 'New Aircraft', new_aircraft_path, class: 'h5 link-dark text-decoration-none py-5 ms-5 me-4 my-0 text-center', id:'links-nav-mm' %>
    <%= link_to 'Aircrafts', aircrafts_path, class: 'h5 link-dark text-decoration-none py-5 ms-5 me-4 my-0 text-center', id:'links-nav-mm' %>

    <% if user_signed_in? %>
    <%= link_to 'Bookings', bookings_path, class: 'h5 link-dark text-decoration-none py-5 ms-5 me-4 my-0 text-center', id:'links-nav-mm'  %>
      <%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete }, class: 'h5 link-dark text-decoration-none py-5 ms-5 me-5 my-0 text-center', id:'links-nav-mm' %>
      <div class="d-flex align-items-center px-6 px-md-4 bg-white">
        <%= link_to edit_user_registration_path do %>
        <%= image_tag current_user.photo, class: "rounded-circle", style: "width: 50px; height: 50px;" %>
        <% end %>
        </div>
      </div>
    <% else %>

      <%= link_to 'Log in', new_user_session_path, class: 'h5 link-dark text-decoration-none py-5 ms-5 me-4 my-0 text-center', id:'links-nav-mm'%>
      <%= link_to 'Sign up', new_user_registration_path, class: 'h5 link-dark text-decoration-none py-5 ms-5 me-4 my-0 text-center', id: 'links-nav-mm'%>

    <% end %>
  </div>
</header>