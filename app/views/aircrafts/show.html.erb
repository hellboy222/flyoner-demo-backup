<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('background-banner.jpg');">
  <div class="container" id="container-banner">
    <h1><%= @aircraft.name %></h1>

    <div class="boton-avion">
      <p><%= link_to "Book now", new_aircraft_path, class: "btn btn-light mt-5" %></p>
    </div>
  </div>
</div>

<div class="card-details m-5">
  <div class="card-product-details p-2">
    <h4><%= @aircraft.name %></h4>
    <p><%= @aircraft.description %></p>
    <p><%= "Seats: #{@aircraft.seats}" %></p>
  </div>
</div>
